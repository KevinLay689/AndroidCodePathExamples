<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.kevinlay.androidfundamentalspractice">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Structure.StructureMainActivity" />
        <activity android:name=".Structure.ScreenRotationActivity" />
        <activity android:name=".Structure.PermissionsActivity" />
        <activity android:name=".ViewsAndLayouts.ViewsAndLayoutsActivity" />
        <activity android:name=".ViewsAndLayouts.TextViewActivity" />
        <activity android:name=".ViewsAndLayouts.EditTextActivity" />
        <activity android:name=".ViewsAndLayouts.ImageViewActivity" />
        <activity android:name=".ViewsAndLayouts.InputViewActivity" />
        <activity android:name=".DesigningAndStylingViews.DesigningAndStylingViewActivity" />
        <activity android:name=".DesigningAndStylingViews.AnimationActivity" />
        <activity android:name=".DesigningAndStylingViews.DrawableActivity"></activity>
    </application>

</manifest>