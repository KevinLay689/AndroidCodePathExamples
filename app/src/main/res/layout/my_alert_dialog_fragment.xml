<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.kevinlay.androidfundamentalspractice.Fragments.DialogFragmentActivity">

    <Button
        android:id="@+id/bShowCustomDialogFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_dialog_fragment_custom_button_text" />

    <Button
        android:id="@+id/bShowAlertDialogFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_dialog_fragment_alert_button_text" />
</LinearLayout>
